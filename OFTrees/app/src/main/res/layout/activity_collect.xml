<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectData">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_collect"
            style="@style/AppTheme.Toolbar">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="信息采集"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/layoutPBar"
        android:elevation="10dp"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/pBar"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="请稍等，数据上传中"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp"
        android:id="@+id/scv_ac"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/loc"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="位置信息"
                android:textColor="#50BA70"
                android:textSize="20dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:rowCount="16"
                android:columnCount="2">
                <TextView
                    android:id="@+id/add"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="地址："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/address"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/xadd"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="详细位置："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/xaddress"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
            </GridLayout>
            <TextView
                android:id="@+id/binfo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="基本信息"
                android:textColor="#50BA70"
                android:textSize="20dp"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:rowCount="16"
                android:columnCount="2">
                <TextView
                    android:id="@+id/nu"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="编号："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/nuber"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/ke"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="科："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/branch"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/so"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="属："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/sort"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/cn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="中文名称："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/cname"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/al"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="别名："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/alias"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/la"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="拉丁名称："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/latin_name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/fea"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="特点："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/feature"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
            </GridLayout>
            <TextView
                android:id="@+id/growth_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="生长状况"
                android:textColor="#50BA70"
                android:textSize="20dp" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:rowCount="16"
                android:columnCount="2">
                <TextView
                    android:id="@+id/ty"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="类型："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <Spinner
                    android:id="@+id/type"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:entries="@array/t_type"
                    android:background="@android:drawable/alert_light_frame"
                    />
                <TextView
                    android:id="@+id/age"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="估测树龄："
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <EditText
                    android:id="@+id/e_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame" />
                <TextView
                    android:id="@+id/th"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="树高："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/t_height"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/dia"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="胸围："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/diameter"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/ac"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="平均冠幅："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/average_crown"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/wec"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="东西冠幅："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/se_crown"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/snc"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="南北冠幅："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/sn_crown"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/alt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="海拔："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/altitude"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/s_d"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="坡向："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/slope_d"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/s_a"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="坡度："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/slope_a"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/soil"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="土壤类别："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <Spinner
                    android:id="@+id/soil_category"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:entries="@array/s_type"
                    android:background="@android:drawable/alert_light_frame"
                    />
                <TextView
                    android:id="@+id/soil_d"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="土壤密度："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/soil_density"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
                <TextView
                    android:id="@+id/g_p"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="生长势："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <Spinner
                    android:id="@+id/growth_potential"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"
                    android:entries="@array/g_type"/>
                <TextView
                    android:id="@+id/g_e"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="生长环境："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <Spinner
                    android:id="@+id/growth_environment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:entries="@array/e_type"
                    android:background="@android:drawable/alert_light_frame" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="历史/详情："
                    android:textStyle="bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/histroy"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="80dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/alert_light_frame"/>
            </GridLayout>
            <TextView
                android:id="@+id/picture"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="图片"
                android:textColor="#50BA70"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:id="@+id/pic1"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add"
                    android:scaleType="centerInside"
                    android:background="@drawable/text_sharp"
                    />
                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/app_name"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="16dp"
                    android:scaleType="centerInside" />
                <ImageView
                    android:id="@+id/pic3"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/app_name"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp">
                <Button
                    android:id="@+id/take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/camerra"
                    android:layout_gravity="center"
                    android:text="拍照"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="5"
                    />
                <Button
                    android:id="@+id/album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/camerra"
                    android:layout_gravity="center"
                    android:text="相册"
                    android:layout_weight="5"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新选择"
                    android:id="@+id/reChoose"
                    android:layout_weight="5"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/collect_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>




        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
